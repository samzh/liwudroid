<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="visible">
    <TextView android:layout_width="fill_parent" android:id="@+id/title" android:text="@string/title" android:layout_gravity="center" android:layout_height="wrap_content" android:gravity="center|center_horizontal"></TextView>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/loginLabel" android:text="@string/strLoginLabel"></TextView>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/textLogin" android:text="@string/strLoginLabel"></EditText>
    <TextView android:layout_width="fill_parent" android:id="@+id/pwdLabel" android:layout_height="wrap_content" android:text="@string/strPwdLabel"></TextView>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:password="true" android:id="@+id/textPwd" android:text=""></EditText>
    <Button android:id="@+id/btnLogin" android:layout_height="wrap_content" android:text="@string/strBtnLogin" android:layout_width="100dip" android:gravity="center"></Button>
    
</LinearLayout>
